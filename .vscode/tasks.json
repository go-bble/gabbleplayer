            //     "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
            //     "${file}"
            // ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "cmake template clean rebuild task.",
            "targets": ["demo"]
        }
